# Application Settings
NODE_ENV=development
PORT=3000
APP_NAME=PledgePoint Platform

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/pledgepoint
MONGODB_REPLICAS=
MONGODB_SHARDING_ENABLED=false

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Settings
JWT_SECRET=use_a_strong_secret_key_here_in_production
JWT_REFRESH_SECRET=use_a_different_strong_secret_key_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=pledgepoint-platform

# Security Settings
PASSWORD_PEPPER=use_a_strong_pepper_value_in_production
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
CSRF_SECRET=use_a_strong_csrf_secret_in_production
RATE_LIMIT_WINDOW=900
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_SECRET=use_a_strong_session_secret_in_production
SESSION_DURATION=86400
SESSION_INACTIVE_TIMEOUT=1800
MAX_SESSIONS_PER_USER=5

# Two-Factor Authentication
TWO_FACTOR_ISSUER=PledgePoint
TWO_FACTOR_WINDOW=1
BACKUP_CODES_COUNT=10

# File Upload Settings
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf
UPLOAD_DESTINATION=uploads/

# Cache Settings
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# CORS Settings
CORS_ORIGINS=http://localhost:3000

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
PASSWORD_RESET_PATH=/reset-password
EMAIL_VERIFICATION_PATH=/verify-email

# Logging Configuration
LOG_LEVEL=info
LOG_FILENAME=app.log

# Email Settings
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=pledgepoint@example.com
EMAIL_REPLY_TO=support@example.com
EMAIL_LOGO_URL=/logo.png
EMAIL_FOOTER=Â© 2024 PledgePoint. All rights reserved.
EMAIL_RATE_LIMIT_WINDOW=3600
EMAIL_RATE_LIMIT_MAX=20
